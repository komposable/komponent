<!DOCTYPE html>
<html>
<head>
  <title>Styleguide</title>

  <%#= javascript_pack_tag "komponent/styleguide" %>
  <%#= stylesheet_pack_tag "komponent/styleguide", media: "all" %>

  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.0/normalize.css">
  <style>
    @import url('https://fonts.googleapis.com/css?family=Fira+Mono|Fira+Sans');

    body {
      font-family: 'Fira Sans', sans-serif;
    }

    pre {
      font-family: 'Fira Mono', monospace;
    }

    .header {
      background-color: blue;
      color: white;
      width: 100%;
      height: 40px;
    }

    .sidebar {
      float: left;
      width: 160px;
      background-color: black;
      color: white;
    }
    .sidebar a {
      color: white;
    }

    .container {
      padding-left: 20px;
      background-color: green;
    }
  </style>
</head>
<body>
  <%=c 'komponent/styleguide/header' %>

  <%=c 'komponent/styleguide/container' do %>
    <%= yield %>
  <% end %>

  <%=c 'komponent/styleguide/footer' %>
</body>
</html>
